    <script>
        
        const sampleTweets = [
            "Just discovered this amazing AI tool that helps generate engaging tweets in seconds! Game changer for my social media strategy. #AITools #Productivity",
            "The future of content creation is here: AI-assisted writing that enhances human creativity rather than replacing it. What tools are you using? #AI #ContentCreation",
            "Morning routine: 1. Coffee 2. AI-generated tweet ideas 3. Pick the best one 4. Engage. Takes 5 minutes and has doubled my reach!",
            "Why spend hours crafting tweets when AI can give you high-quality options in seconds? Productivity hack unlocked! 🔓",
            "The secret to viral tweets? Combine human insight with AI-powered suggestions. Try it and thank me later! ;) #TwitterTips"
        ];

        
        const improvements = {
            professional: "I've analyzed the market trends and concluded that AI-powered tools are revolutionizing social media engagement strategies across industries.",
            funny: "My AI just wrote this tweet and it's better than anything I could come up with. Should I be worried? 😅 #AIvsHuman",
            short: "AI tweets = more time for coffee. ☕️",
            expanded: "After extensive testing with our AI tweet generator, we've observed significant improvements in engagement metrics. The system analyzes trending topics and suggests optimal posting times for maximum visibility."
        };

        
        const generateBtn = document.getElementById('generateBtn');
        const tweetText = document.getElementById('tweetText');
        const charCount = document.getElementById('charCount');
        const copyBtn = document.getElementById('copyBtn');
        const tweetBtn = document.getElementById('tweetBtn');
        const improveBtn = document.getElementById('improveBtn');
        const shortenBtn = document.getElementById('shortenBtn');
        const expandBtn = document.getElementById('expandBtn');
        const funnyBtn = document.getElementById('funnyBtn');

        
        tweetText.addEventListener('input', updateCharCount);
        
        function updateCharCount() {
            const count = tweetText.value.length;
            charCount.textContent = count;
            charCount.className = 'char-counter';
            
            if (count > 250) {
                charCount.classList.add('warning');
            }
            if (count > 280) {
                charCount.classList.add('error');
            }
        }

        
        generateBtn.addEventListener('click', function() {
            const tone = document.getElementById('tone').value;
            const topic = document.getElementById('topic').value;
            const keywords = document.getElementById('keywords').value;
            const includeHashtags = document.getElementById('includeHashtags').checked;
            const includeEmojis = document.getElementById('includeEmojis').checked;

            
            const randomIndex = Math.floor(Math.random() * sampleTweets.length);
            let generatedTweet = sampleTweets[randomIndex];
            
           
            if (topic) {
                generatedTweet = generatedTweet.replace(/AI tool/g, `${topic} tool`);
            }
            
            if (!includeHashtags) {
                generatedTweet = generatedTweet.replace(/#\w+/g, '');
            }
            
            if (!includeEmojis) {
                generatedTweet = generatedTweet.replace(/[^\w\s#.,!?']/g, '');
            }
            
            tweetText.value = generatedTweet.trim();
            updateCharCount();
        });

       
        improveBtn.addEventListener('click', function() {
            if (!tweetText.value) return;
            tweetText.value = improvements.professional;
            updateCharCount();
        });
        
        shortenBtn.addEventListener('click', function() {
            if (!tweetText.value) return;
            tweetText.value = improvements.short;
            updateCharCount();
        });
        
        expandBtn.addEventListener('click', function() {
            if (!tweetText.value) return;
            tweetText.value = improvements.expanded;
            updateCharCount();
        });
        
        funnyBtn.addEventListener('click', function() {
            if (!tweetText.value) return;
            tweetText.value = improvements.funny;
            updateCharCount();
        });

       
        copyBtn.addEventListener('click', function() {
            if (!tweetText.value) return;
            
            tweetText.select();
            document.execCommand('copy');
            
           
            const originalText = copyBtn.innerHTML;
            copyBtn.innerHTML = '<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" /></svg>Copied!';
            
            setTimeout(function() {
                copyBtn.innerHTML = originalText;
            }, 2000);
        });

     
        tweetBtn.addEventListener('click', function() {
            if (!tweetText.value) return;
            
            const text = encodeURIComponent(tweetText.value);
            window.open(`https://twitter.com/intent/tweet?text=${text}`, '_blank');
        });
    </script>
</body>
